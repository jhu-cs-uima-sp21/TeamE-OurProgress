<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/team_member_background"
            android:gravity="fill_horizontal|center_vertical"
            android:orientation="horizontal"
            android:padding="18dp">

            <TextView
                android:id="@+id/member_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="2dp"
                android:layout_marginRight="2dp"
                android:layout_weight="3"
                android:contentDescription="@string/team_progress_circle"
                android:ellipsize="end"
                android:fontFamily="@font/montserrat"
                android:maxLines="1"
                android:singleLine="true"
                android:text="@string/dummy_name"
                android:textColor="@color/black"
                android:textSize="20sp"
                tools:layout_marginRight="5dp" />

            <TextView
                android:id="@+id/member_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginLeft="2dp"
                android:layout_marginEnd="2dp"
                android:layout_marginRight="2dp"
                android:layout_weight=".40"
                android:ems="4"
                android:fontFamily="@font/montserrat"
                android:singleLine="true"
                android:text="@string/dummy_id"
                android:textColor="@color/bism_blue"
                android:textSize="20sp" />

            <ImageButton
                android:id="@+id/remove_member_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginLeft="2dp"
                android:background="@drawable/circle_red"
                android:contentDescription="@string/remove_a_member"
                app:srcCompat="@drawable/ic_clear_white_18dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</FrameLayout>