<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bism_blue"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/create_teams"
            android:layout_width="wrap_content"
            android:layout_height="132dp"
            android:layout_weight=".66"
            android:background="@color/bism_blue"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="center"
            android:hint="@string/enter_team_name_here"
            android:textColor="@color/white"
            android:textColorHint="@color/dark_gray"
            android:textScaleX="1.1"
            android:textSize="36sp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".33"
            android:paddingRight="15dp"
            app:srcCompat="@drawable/ic_edit_white_18dp" />


    </LinearLayout>

    <FrameLayout
        android:id="@+id/team_info_frag"
        android:name="com.example.bismapp.ui.modifyTeams.TeamInfoFragment"
        class="com.example.bismapp.ui.modifyTeams.TeamInfoFragment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/whitesmoke"
        android:padding="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

    </FrameLayout>

    <FrameLayout
        android:id="@+id/team_roster_frag"
        android:name="com.example.bismapp.ui.modifyTeams.TeamMRFragment"
        class="com.example.bismapp.ui.modifyTeams.TeamMRFragment"
        android:layout_width="0dp"
        android:layout_height="302dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/team_info_frag">

    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
